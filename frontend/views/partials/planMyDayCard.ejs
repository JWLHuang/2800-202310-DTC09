<link rel="stylesheet" href="/style/restaurantThumbnail.css">

<% var images=["/images/site_resources/restaurant01.jpg", "/images/site_resources/restaurant02.jpg"
    , "/images/site_resources/restaurant03.jpg" ] %>
<% var randomImage=images[Math.floor(Math.random() * images.length)] %>
<% var randomImage=images[Math.floor(Math.random() * images.length)] %>
<%- include('restaurantFunctions') %>
<% if (restaurant._id) { %>
<a href="/restaurant/<%= restaurant._id %>">
  <div class="row justify-content-center">
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-2 p-0">
          <img src="<%= restaurant.ImgUrl %>" class="img-fluid rounded-start restaurant-thumbnail" alt="<%= restaurant.Name%>">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= restaurant.Name %>
            </h5>
            <p class="card-text">
              <%= restaurant.Address %>
            </p>
            <% if (restaurant.Award !=="Bib Gourmand" ) { %>
            <%= restaurant.Award ? createStarRating(restaurant.Award)
                                                : "Michelin rating not available" %>
            <% } else { %>
            <p>
              <%= restaurant.Award %>
            </p>
            <% } %>
            <p class="card-text">
              <%= restaurant.Price %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</a>
<% } else { %>
<div class="row justify-content-center">
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-2 p-0">
        <img src="<%= randomImage%>" class="img-fluid rounded-start" style="width:100%; height:100%;" alt="<%= randomImage%>">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">
            <em>No restaurants matched with current filters for this category</em>
          </h5>
          <p class="card-text">
            &nbsp;
          </p>
          <p>
            &nbsp;
          </p>
          <p class="card-text">
            &nbsp;
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %>