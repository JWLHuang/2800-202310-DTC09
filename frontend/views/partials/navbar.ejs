<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<!-- link navbar.css -->
<link rel="stylesheet" href="/style/navbar.css">

<nav class="navbar navbar-dark fixed-top">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
            aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#"><img src="/images/site_resources/nav_logo.png"
                class="rounded-circle align-middle" style="width:30px; height: 30px;" /></a>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar"
            aria-labelledby="offcanvasNavbarLabel">
            <!-- Side Menu Header -->
            <div class="offcanvas-header">
                <!-- Change depending on if user is logged in -->
                <% if (user) { %>
                    <a href='/profile'><img src="/images/profile_pics/stockphoto.jpg"
                            class="rounded-circle align-middle" style="width:30px; height: 30px;" /></a>
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">
                        <%= user.name %>
                    </h5>
                    <% } else { %>
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
                        <% } %>
                            <div data-bs-theme="dark">
                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas"
                                    aria-label="Close"></button>
                            </div>
            </div>
            <!-- Side Menu Body -->
            <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    <!-- Show different links if user is not logged in -->
                    <% if (!user) { %>
                        <% locals.beforeLoginNav.forEach(function(link) { %>
                            <li class="nav-item">
                                <!-- Highlight current active page for user in menu -->
                                <% if (link.link===currentURL) { %>
                                    <a href="<%= link.link %>" class="nav-link active" aria-current="page">
                                        <i class="<%=link.icon%>"></i>
                                        <%= link.name %>
                                    </a>
                                    <% } else { %>
                                        <a href="<%= link.link %>" class="nav-link">
                                            <i class="<%=link.icon%>"></i>
                                            <%= link.name %>
                                        </a>
                            </li>
                            <% } %>
                                <% }) %>
                                    <% } else { %>
                                        <% locals.afterLoginNav.forEach(function(link) { %>
                                            <li class="nav-item">
                                                <% if (link.link===currentURL) { %>
                                                    <a href="<%= link.link %>" class="nav-link active"
                                                        aria-current="page">
                                                        <i class="<%=link.icon%>"></i>
                                                        <%= link.name %>
                                                    </a>
                                                    <% } else { %>
                                                        <a href="<%= link.link %>" class="nav-link">
                                                            <i class="<%=link.icon%>"></i>
                                                            <%= link.name %>
                                                        </a>
                                            </li>
                                            <% } %>
                                                <% }) %>
                                                    <% } %>

                </ul>
            </div>
        </div>
    </div>
</nav>