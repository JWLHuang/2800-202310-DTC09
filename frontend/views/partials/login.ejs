<div class="tab-pane show <%= target === 'login'? 'active' : null %>" id="loginBox">

  <!-- Error Message -->
  <% if (locals.errorMsg) { %>
    <div class="alert alert-danger text-center mb-0" role="alert">
      <%= errorMsg %>
    </div>
    <% } %>

      <!-- Login Form -->
      <form action="/login" method="POST">
        <!-- Email input -->
        <div class="form-outline mb-2">
          <label class="form-label font-weight-bold text-secondary diplayLabel" for="email" id="emailLabel">Email</label>
          <input type="email" id="email" class="form-control" placeholder="Email" name="email">
        </div>

        <!-- Password input -->
        <div class="form-outline">
          <label class="form-label font-weight-bold text-secondary diplayLabel" for="password" id="passwordLabel">Password</label>
          <input type="password" id="password" class="form-control" placeholder="Password" name="password">
        </div>

        <!-- Forget Password -->
        <div class="row mt-4">
          <div class="col-md-6 d-flex justify-content-center">
            <a href="/resetPassword">Forgot password?</a>
          </div>
        </div>

        <!-- Submit button -->
        <button class="button w-100 mt-3" id="signInButton" type="submit">
          <span>Sign in</span>
          <svg viewBox="0 0 15 13">
            <polyline points="2 6.5 6 10.5 13 2.5"></polyline>
          </svg>
        </button>

        <!-- Register buttons -->
        <div class="text-center mt-3">
          <p>Not a member? <a href="/signup">Register</a></p>
        </div>
      </form>

      <!-- External Authorization -->
      <div class="d-flex align-items-center my-4 justify-content-center">
        <hr class="flex-grow-1" style="opacity: 1;">
        <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
        <hr class="flex-grow-1" style="opacity: 1;">
      </div>
      <a class="btn btn-primary btn-lg btn-block" style="background-color: #EA4335; border-color:unset!important"
        href="/auth/google" role="button">
        <i class="me-2"></i>Continue with Google</a>
      
</div>