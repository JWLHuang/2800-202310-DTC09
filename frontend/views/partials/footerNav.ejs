<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link rel="stylesheet" href="/style/footer.css">

<div class="container-fluid mt-5 p-0 d-none d-lg-block">
    <!-- Footer -->
    <footer class="text-center text-lg-start text-dark desktop-footer">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-end p-4 text-white text-align-center section-header">
            <!-- Left -->
            <div class="me-5 align-self-center">
                <span>Get connected with us on social networks:</span>
            </div>
            <!-- Right -->
            <div>
                <% locals.socialLinks.forEach((link)=> { %>
                    <a class="socialLinks">
                        <i class="<%=link.name%>"></i>
                    </a>
                    <% }) %>
            </div>
        </section>
        <!-- Section: Links  -->
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold">About Us</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto" />
                        <p>
                            Welcome to TableTrek! We are a team of dedicated developers who are passionate about
                            creating a platform for you to find the best Michelin-rated restaurants in town. We hope you
                            enjoy our
                            service!
                        </p>
                    </div>
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                    </div>
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Assistance</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto" />
                        <% locals.footerLinks.forEach((link)=> { %>
                            <p>
                                <a class='desktop-footer-links restaurant-info-button' href="<%= link.link %>">
                                    <%= link.name %>
                                </a>
                            </p>
                            <% }) %>
                    </div>
                </div>
            </div>
        </section>
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.1)">
            Â© 2023 TableTrek, Inc.
        </div>
    </footer>
</div>