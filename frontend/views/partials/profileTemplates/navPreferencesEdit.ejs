<div class="modal-header">
    <h5 class="modal-title" id="pokemon-info-Title">Edit <%=user.name%>'s Profile</h5>
    <button type="button" class="close close-modal">
        <span aria-hidden="true">Ã—</span>
    </button>
</div>
<form action="/updateDietaryPreferences" method="POST">
    <div class="modal-body">
        <div class="card-body">
            <h5 for="message-text" class="col-form-label">Dietary Preferences:</h5>
            <select class="form-select" id="mood-tag" name="dietaryPreferences" multiple size="10" style="height: 100%;">
                <option selected disabled hidden>Update Your Dietary Preferences ðŸ˜€
                </option>
                <% for (const key in dietaryPreferences) { %>
                    <p>
                        <% if (key.startsWith('option')) { %>
                            <option value=<%=dietaryPreferences[key]%>>
                                <%=dietaryPreferences[key].charAt(0).toUpperCase() + dietaryPreferences[key].slice(1) %>
                                    <% } %>
                            </option>
                    </p>
                    <% } %>
            </select>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary px-4">Save</button>
        <button type="button" class="btn btn-danger close-modal">Discards</button>
    </div>
</form>