<%- include('partials/header') -%>
    <div class="container ">
        <div class="row d-flex justify-content-center">
            <div class="col-9">
                <h2>Please confirm the following to reset your password:</h2>
                <% if (typeof errorMessage !=="undefined" ) { %>
                    <div class="row justify-content-center">
                        <h5 class="message-header">
                            <div class="alert alert-danger text-center mb-0" role="alert">
                                <%= errorMessage %>
                            </div>
                        </h5>
                    </div>
                    <% } %>
                <form action='/forgotPasswordSubmit' method='POST'>
                    <br>
                    <div class="form-group">
                        <label for="inputEmail">Email Address</label>
                        <input type="email" class="form-control" name='email' aria-describedby="emailHelp"
                            placeholder="Enter Email">
                    </div>
                    <div class="form-group">
                        <label for="securityQuestion">Security Question</label>
                        <select class="form-select" aria-label="Default select example" name="question" id="question">
                            <option selected disabled>Please select a security question</option>
                            <option value="questionOne">What is your mother's maiden name?</option>
                            <option value="questionTwo">What was the name of your first pet?</option>
                            <option value="questionThree">What is your favourite colour?</option>
                            <option value="questionFour">In which city were you born?</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="answer">Answer</label>
                        <input type="answer" class="form-control" name='answer' placeholder="Answer">
                    </div>
                    <div class="form-group">
                        <label for="inputNewPasswordConfirm">New Password</label>
                        <input type="password" class="form-control" name='newPassword' placeholder="New Password">
                    </div>
                    <div class="form-group">
                        <label for="inputConfirmNewPassword">Confirm New Password</label>
                        <input type="password" class="form-control" name='newPasswordConfirm'
                            placeholder="Confirm New Password">
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary" value='Submit'>Submit</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('partials/footer') -%>