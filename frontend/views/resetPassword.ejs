<%- include('partials/header') -%>
    <div class="container ">
        <div class="row d-flex justify-content-center">
            <div class="col-9 mt-5">
                <h5>Please confirm the following to change your password:</h5>
                <% if (typeof errorMessage !== "undefined") { %>
                    <div class="row justify-content-center">
                        <h5 class="message-header">
                            <div class="alert alert-danger text-center mb-0" role="alert">
                                <%= errorMessage %>
                            </div>
                        </h5>
                    </div>
                    <% } %>
                <form action='/resetPasswordSubmit' method='POST'>
                    <br>
                    <div class="form-group">
                        <label for="inputEmail">Email Address</label>
                        <input type="email" class="form-control" name='email' aria-describedby="emailHelp"
                            placeholder="Enter Email">
                    </div>

                    <div class="form-group">
                        <label for="inputPassword">Current Password</label>
                        <input type="password" class="form-control" name='password' placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="inputNewPasswordConfirm">New Password</label>
                        <input type="password" class="form-control" name='newPassword' placeholder="New Password">
                    </div>
                    <div class="form-group">
                        <label for="inputConfirmNewPassword">Confirm New Password</label>
                        <input type="password" class="form-control" name='newPasswordConfirm' placeholder="Confirm New Password">
                    </div>
                    <br>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary" value='Submit'>Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<%- include('partials/footer') -%>