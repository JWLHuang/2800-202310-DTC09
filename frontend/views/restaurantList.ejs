<%- include('partials/header.ejs') %>

  <div class="container">
    <% if (locals.errorMsg) { %>
      <div class="alert alert-danger" role="alert">
        <%= errorMsg %>
      </div>
      <% } %>
        <div class="row">
          <div class="col">
            <div class="container-fluid">
              <% restaurants.forEach((restaurant)=> { %>
                <%- include('partials/restaurantCard', {restaurant: restaurant}) %>
                  <% }) %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <div class="container">
              <div class="d-grid p-4">
                <a href="/filterRestaurants" class="btn btn-primary" type="button">Change Filter</a>
              </div>
            </div>
          </div>
        </div>
        <%- include('partials/footer.ejs') %>