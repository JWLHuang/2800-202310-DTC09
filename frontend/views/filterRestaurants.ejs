<%- include('partials/header') %>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.cuisineType').select2()
        });
    </script>

    <%- include("svgIcons") %>

        <main class="container">
            <h1 class="text-center mb-5">What do you feel like eating today?</h1>
            <form action="/filterRestaurantsResults" method="POST">
                <div class="form-group mb-4">
                    <label>Cuisine Type</label>
                    <div class="mb-3 hidden-block cuisine">
                        <select class="cuisineType" name="state" style="width:100%;">
                            <option value="" selected disabled hidden>Choose the cuisine type</option>
                            <% cuisine.forEach((item)=> {%>
                                <option value="<%= item %>">
                                    <%=item%>
                                </option>
                                <%})%>
                        </select>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label>Price</label>
                    <div class="mb-3 hidden-block cuisine">
                        <select class="cuisineType" name="state" style="width:100%;">
                            <option value="" selected disabled hidden>Choose the price range</option>
                            <% price.forEach((item)=> {%>
                                <option value="<%= item %>">
                                    <%=item%>
                                </option>
                                <%})%>
                        </select>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label>Michelin Stars</label>
                    <div class="mb-3 hidden-block cuisine">
                        <select class="cuisineType" name="state" style="width:100%;">
                            <option value="" selected disabled hidden>Choose the Michelin Stars Rating</option>
                            <% award.forEach((item)=> {%>
                                <option value="<%= item %>">
                                    <%=item%>
                                </option>
                                <%})%>
                        </select>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label>Which meal ?</label>
                    <div class="mb-3 hidden-block cuisine">
                        <select class="cuisineType" name="state" style="width:100%;">
                            <option value="" selected disabled hidden>Choose meanl type</option>
                            <option value="breakfast">Breakfast</option>
                            <option value="lunch">Lunch</option>
                            <option value="dinner">Dinner</option>
                        </select>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </main>

        <%- include('partials/footer') %>