<link rel="stylesheet" href="/style/contact.css">

<%- include('partials/header.ejs') %>
    <div class="container-fluid contact-header">
        <div class="container">
            <div class="row">
                <h1 class="contact_title mb-3">Contact Us</h1>
            </div>
            <div class="row">
                <p>Need assistance? Get in touch with us with the form below.</p>
            </div>
        </div>
    </div>
    <div class="container my-5">
        <% if (message) { %>
        <div class="row justify-content-center">
                <h5 class="message-header">
                <div class="alert alert-danger text-center mb-0" role="alert">
                        <%= message %>
                    </div>
                </h5>
            </div>
            <% } %>
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <%- include('partials/contactForm.ejs') %>
            </div>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>