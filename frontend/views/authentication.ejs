<link rel="stylesheet" href="style/authentication.css" />
<link rel="stylesheet" href="style/button.css" />

<!-- Insert Header & SVG-->
<%- include('partials/header.ejs') %>
    <%- include('svgIcons.ejs') %>
        <div class="container mt-5" style="width:min(90%, 500px)">
            <!-- Login & Register tabs -->
            <ul class="nav nav-pills nav-justified mb-5" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link <%= target === 'login'? 'active text-white': 'text-primary' %>" id="tab-login">Login</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link <%= target === 'signup'? 'active text-white': 'text-primary' %>" id="tab-register">Register</a>
                </li>
            </ul>
            <!-- Login & Register forms -->
            <div class="tab-content">
                <%- include('partials/login.ejs', {target: target}) %>
                    <%- include('partials/signup.ejs', {target: target}) %>
            </div>
            <!--JavaScript-->
            <script src="/script/authentication.js"></script>
        </div>
        <%- include('partials/footer.ejs') %>